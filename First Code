import UIKit

class SimpleTextViewController: UIViewController {
    
    // Creating the label programmatically
    private let label: UILabel = {
        let lbl = UILabel()
        lbl.text = "Hello, this is a simple text view!"
        lbl.textAlignment = .center
        lbl.font = UIFont.systemFont(ofSize: 24)
        lbl.translatesAutoresizingMaskIntoConstraints = false // Enable Auto Layout
        return lbl
    }()
    
    override func viewDidLoad() {
        super.viewDidLoad()
        
        view.backgroundColor = .white
        
        // Add the label to the view
        view.addSubview(label)
        
        // Set up the label's constraints (position in the view)
        setupConstraints()
    }
    
    // Set up Auto Layout constraints for the label
    private func setupConstraints() {
        label.centerXAnchor.constraint(equalTo: view.centerXAnchor).isActive = true
        label.centerYAnchor.constraint(equalTo: view.centerYAnchor).isActive = true
    }
}


import UIKit

class ViewController: UIViewController, UITableViewDataSource, UITableViewDelegate {

    @IBOutlet weak var tableView: UITableView! // Outlet for the table view
    
    let items = ["Apple", "Banana", "Orange", "Pineapple", "Grapes"] // Sample data

    override func viewDidLoad() {
        super.viewDidLoad()
        
        // Set the delegate and data source
        tableView.delegate = self
        tableView.dataSource = self
        
        // Register a basic cell
        tableView.register(UITableViewCell.self, forCellReuseIdentifier: "cell")
    }

    // MARK: - UITableViewDataSource Methods

    func tableView(_ tableView: UITableView, numberOfRowsInSection section: Int) -> Int {
        return items.count // Return the number of items in the array
    }

    func tableView(_ tableView: UITableView, cellForRowAt indexPath: IndexPath) -> UITableViewCell {
        let cell = tableView.dequeueReusableCell(withIdentifier: "cell", for: indexPath)
        cell.textLabel?.text = items[indexPath.row] // Set the cell's text label
        return cell
    }
    
    // MARK: - UITableViewDelegate Methods

    func tableView(_ tableView: UITableView, didSelectRowAt indexPath: IndexPath) {
        print("Selected item: \(items[indexPath.row])") // Print the selected item
        tableView.deselectRow(at: indexPath, animated: true) // Deselect the row after selection
    }
}




