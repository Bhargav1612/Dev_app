import UIKit

class ViewController: UIViewController, UITableViewDataSource, UITableViewDelegate {

    let tableView = UITableView()  // Table view to display the bookmarks
    var items: [String] = []       // Array to hold bookmark titles

    override func viewDidLoad() {
        super.viewDidLoad()
        newDataBuild()
    }
    
    override func newDataBuild() {
        // Load the JSON data here using optional chaining
        if let bookmarks = loadObject?.pageJSON?["Page"]?["bookmarks"] as? [[String: Any]] {
            // Extract "pageTitle" from each bookmark using optional chaining
            items = bookmarks.compactMap {
                $0["extraParameters"]?["pageTitle"] as? String
            }
        } else {
            print("Error: Could not load bookmarks or bookmarks are empty.")
        }
        
        // Set the delegate and data source for the table view
        tableView.delegate = self
        tableView.dataSource = self

        // Register the cell
        tableView.register(UITableViewCell.self, forCellReuseIdentifier: "cell")

        // Add the table view to the view and set constraints
        view.addSubview(tableView)
        tableView.translatesAutoresizingMaskIntoConstraints = false
        NSLayoutConstraint.activate([
            tableView.topAnchor.constraint(equalTo: view.topAnchor),
            tableView.bottomAnchor.constraint(equalTo: view.bottomAnchor),
            tableView.leadingAnchor.constraint(equalTo: view.leadingAnchor),
            tableView.trailingAnchor.constraint(equalTo: view.trailingAnchor)
        ])
        
        // Reload the table view to display the data
        tableView.reloadData()
    }

    // UITableViewDataSource methods
    func tableView(_ tableView: UITableView, numberOfRowsInSection section: Int) -> Int {
        return items.count
    }

    func tableView(_ tableView: UITableView, cellForRowAt indexPath: IndexPath) -> UITableViewCell {
        let cell = tableView.dequeueReusableCell(withIdentifier: "cell", for: indexPath)
        cell.textLabel?.text = items[indexPath.row]  // Set the text for each bookmark title
        return cell
    }
    
    // UITableViewDelegate method
    func tableView(_ tableView: UITableView, didSelectRowAt indexPath: IndexPath) {
        print("Selected \(items[indexPath.row])")
    }
}
